<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/holo_gray_bright"
                android:minHeight="150dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_finsh"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_pink_finish" />

                        <com.android.library.widget.JTextView
                            android:id="@+id/jtv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/order_detail_create_title"
                            android:textColor="@color/black_trans87"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <com.android.library.widget.JTextView
                        android:id="@+id/jtv_infor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/order_detail_create_infor"
                        android:textColor="@color/black_trans26"
                        android:textSize="14dp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_order_photo"
                    style="@style/sdv_cover"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:placeholderImage="@drawable/ic_def_square" />

                <com.android.library.widget.JTextView
                    android:id="@+id/jtv_order_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:lines="2"
                    android:paddingLeft="10dp"
                    android:text="1234"
                    android:textColor="@color/black_trans87"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                style="@style/Line.Light.Horizontal"
                android:layout_marginLeft="10dp"
                android:background="@color/black_trans12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.android.library.widget.JTextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_id"
                    android:textColor="@color/black_trans87"
                    android:textSize="14dp" />

                <com.android.library.widget.JTextView
                    android:id="@+id/jtv_order_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1234"
                    android:textColor="@color/text_pink"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                style="@style/Line.Light.Horizontal"
                android:layout_marginLeft="10dp"
                android:background="@color/black_trans12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.android.library.widget.JTextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_item"
                    android:textColor="@color/black_trans87"
                    android:textSize="14dp" />

                <com.android.library.widget.JTextView
                    android:id="@+id/jtv_order_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingRight="10dp"
                    android:text="1234567890123456789011111111111111111111111111"
                    android:textColor="@color/text_pink"
                    android:textSize="14dp" />

                <com.android.library.widget.JTextView
                    android:id="@+id/jtv_order_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="x2"
                    android:textColor="@color/text_pink"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                style="@style/Line.Light.Horizontal"
                android:layout_marginLeft="10dp"
                android:background="@color/black_trans12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.android.library.widget.JTextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_name"
                    android:textColor="@color/black_trans87"
                    android:textSize="14dp" />

                <com.android.library.widget.JTextView
                    android:id="@+id/jtv_order_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1234"
                    android:textColor="@color/text_pink"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                style="@style/Line.Light.Horizontal"
                android:layout_marginLeft="10dp"
                android:background="@color/black_trans12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.android.library.widget.JTextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_phone"
                    android:textColor="@color/black_trans87"
                    android:textSize="14dp" />

                <com.android.library.widget.JTextView
                    android:id="@+id/jtv_order_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1234"
                    android:textColor="@color/text_pink"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                style="@style/Line.Light.Horizontal"
                android:layout_marginLeft="10dp"
                android:background="@color/black_trans12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.android.library.widget.JTextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_email"
                    android:textColor="@color/black_trans87"
                    android:textSize="14dp" />

                <com.android.library.widget.JTextView
                    android:id="@+id/jtv_order_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1234"
                    android:textColor="@color/text_pink"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                style="@style/Line.Light.Horizontal"
                android:layout_marginLeft="10dp"
                android:background="@color/black_trans12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.android.library.widget.JTextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_total_price"
                    android:textColor="@color/black_trans87"
                    android:textSize="14dp" />

                <com.android.library.widget.JTextView
                    android:id="@+id/jtv_order_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1234"
                    android:textColor="@color/text_pink"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:id="@+id/v_empty"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>

    <com.android.library.widget.JTextView
        android:id="@+id/jtv_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_accent"
        android:gravity="center"
        android:text="立即支付"
        android:textColor="@color/white"
        android:textSize="16dp" />
</RelativeLayout>