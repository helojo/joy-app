<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_poi_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        app:placeholderImage="@drawable/ic_def_avatar"
        android:scaleType="centerCrop"
        />


        <com.android.library.widget.JTextView
            android:id="@+id/jtv_cnname"
            android:textColor="@color/black_trans54"
            android:text="东京银座"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/sdv_poi_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.android.library.widget.JTextView
            android:id="@+id/jtv_enname"
            android:text="Tokyo Ginza"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/sdv_poi_photo"
            android:layout_below="@+id/jtv_cnname"
            android:textColor="@color/black_trans35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.android.library.widget.JTextView
            android:id="@+id/jtv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_alignBottom="@+id/sdv_poi_photo"
            android:layout_toRightOf="@+id/sdv_poi_photo"/>
        <com.android.library.widget.JTextView
            android:id="@+id/jtv_day"
            android:layout_alignBottom="@+id/sdv_poi_photo"
            android:layout_toRightOf="@+id/jtv_price"
            android:text="123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>