<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.android.library.widget.FrescoImageView
        android:id="@+id/sdvPhoto"
        style="@style/sdv_cover"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:transitionName="xxx" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sdvPhoto"
        android:layout_alignLeft="@id/sdvPhoto"
        android:layout_alignRight="@id/sdvPhoto"
        android:layout_alignTop="@id/sdvPhoto"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llDiv1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/sdvPhoto"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <com.android.library.widget.FrescoImageView
            android:id="@+id/sdvSubPhoto1"
            style="@style/sdv_cover.CornerRadius"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.android.library.widget.FrescoImageView
            android:id="@+id/sdvSubPhoto2"
            style="@style/sdv_cover.CornerRadius"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDiv2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/llDiv1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <com.android.library.widget.FrescoImageView
            android:id="@+id/sdvSubPhoto3"
            style="@style/sdv_cover.CornerRadius"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.android.library.widget.FrescoImageView
            android:id="@+id/sdvSubPhoto4"
            style="@style/sdv_cover.CornerRadius"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>