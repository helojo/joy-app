<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_cardview_light.margin_8dp"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.android.library.widget.FrescoImageView
            android:id="@+id/sdvBg"
            style="@style/sdv_cover.Tint.CornerRadius.Top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.android.library.widget.JTextView
                    android:id="@+id/jtv_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="75"
                    android:textSize="24dp"
                    android:textColor="@color/color_accent" />
                <com.android.library.widget.JTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_trans54"
                    android:textSize="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/plan_folder_things"/>
            </LinearLayout>

            <View
                style="@style/Line.Dark.Vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/holo_gray_light" />

            <com.android.library.widget.JTextView
                android:id="@+id/jtv_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="@color/black_trans87"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:padding="10dp"
                android:text="123" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>