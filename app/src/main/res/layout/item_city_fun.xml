<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView.Light.margin_10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.android.library.widget.FrescoImageView
        android:id="@+id/sdvPhoto"
        style="@style/sdv_cover.CornerRadius.Top"
        android:layout_width="match_parent"
        android:layout_height="162dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:translationY="-10dp">

        <com.android.library.widget.JTextView
            android:id="@+id/jtvCnName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white_trans87"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.android.library.widget.JTextView
            android:id="@+id/jtvEnName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white_trans87"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.android.library.widget.JTextView
        android:id="@+id/jtvRecNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="104dp"
        android:background="@drawable/shape_bg_oval_accent"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:textColor="@color/white_trans65"
        android:textSize="10dp"
        android:visibility="gone" />

    <com.android.library.widget.JTextView
        android:id="@+id/jtvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="172dp"
        android:textColor="@color/black_trans45"
        android:textSize="13dp" />
</android.support.v7.widget.CardView>