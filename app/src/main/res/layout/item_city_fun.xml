<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    style="@style/CardView.Light.margin_10dp"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvPhoto"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:scaleType="centerCrop"
        android:tint="@color/black_trans50"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="false"
        fresco:roundedCornerRadius="2dp" />

    <com.android.library.widget.JTextView
        android:id="@+id/jtvName"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:gravity="center"
        android:textColor="@color/white_trans87"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.android.library.widget.JTextView
        android:id="@+id/jtvTitle"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_gravity="bottom"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/black_trans45"
        android:textSize="13dp" />
</android.support.v7.widget.CardView>