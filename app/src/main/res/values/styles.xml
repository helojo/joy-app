<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="theme_app" parent="lib_theme_base">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@drawable/shape_bg_window</item>
        <item name="android:textColorPrimary">@color/color_primary_text</item>
        <item name="android:textColorSecondary">@color/color_secondary_text</item>
        <item name="noTitle">false</item>
        <item name="overlay">false</item>
    </style>

    <style name="theme_app.main">
        <item name="colorPrimary">@color/color_bg_window_dark</item>
        <item name="colorPrimaryDark">@color/color_bg_window_dark</item>
    </style>

    <style name="theme_app.translucent">
        <item name="colorPrimary">@color/transparent</item>
    </style>

    <style name="theme_app.translucent.noTitle">
        <item name="noTitle">true</item>
    </style>

    <style name="theme_app.translucent.overlay">
        <item name="overlay">true</item>
    </style>

    <style name="theme_app.translucent.toolbar"></style>

    <style name="theme_app.translucent.toolbar.overlay">
        <item name="overlay">true</item>
    </style>

    <style name="theme_app.translucent.navigationBar">
        <item name="colorPrimary">@color/color_primary</item>
    </style>

    <style name="theme_app.noTitle">
        <item name="noTitle">true</item>
    </style>

    <style name="theme_app.noTitle.hotel">
        <item name="colorPrimaryDark">@color/color_statusbar_hotel</item>
    </style>

    <style name="theme_app.dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 背景透明 -->
    </style>

    <!-- 对话框样式，带白色圆角背景 -->
    <style name="theme_app.dialog.card">
        <item name="android:windowBackground">@drawable/bg_search_gray</item>
    </style>

</resources>