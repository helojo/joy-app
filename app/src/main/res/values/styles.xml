<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="base_theme.noTitle.hotel">
        <item name="colorPrimaryDark">@color/color_statusbar_hotel</item>
    </style>

    <style name="base_theme.dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowBackground">@color/transparent</item><!-- 背景透明 -->
    </style>

    <!-- 对话框样式，带白色圆角背景 -->
    <style name="base_theme.dialog.card">
        <item name="android:windowBackground">@drawable/bg_search_gray</item>
    </style>

</resources>