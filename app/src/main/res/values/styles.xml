<resources>

    <style name="ex_theme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ex_theme_dialog" parent="@style/ex_theme">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 背景透明 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 对话框样式，带白色圆角背景 -->
    <style name="qa_ex_theme_dialog" parent="@style/ex_theme_dialog">
        <item name="android:windowBackground">@drawable/bg_card_item_round</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>

        <item name="cardBackgroundColor">@color/black_trans26</item>
        <item name="cardCornerRadius">4dp</item>
        <!--
        <item name="cardElevation">@dimen/card_elevation</item>
        -->
    </style>
</resources>
